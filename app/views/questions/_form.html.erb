
<%= simple_form_for(@question) do |f| %>
  <%#= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :title,label:"问题主题",placeholder:"写下你的问题" %>
    <%= f.trix_editor :description,label:"问题说明",placeholder:"问题说明"%>

    <%= f.input :tag_list,label:"问题标签" %>
    <%= f.input :downpayment,label:"悬赏金额（元）" %>
    <%#= select_tag 'invited_user_id', options_for_select(User.all.collect{ |u| [u.name, u.id] }) %>
    <%= render "multiple_dropdown_bar" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,value:"提交问题" %>
  </div>
<% end %>
