<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title,label:"问题主题" %>
    <%= f.input :description,label:"问题描述" %>
    <%= f.input :tag_list,label:"问题标签" %>
    <%= f.input :downpayment,label:"悬赏金额（元）",readonly: true,input_html: { value: 200 } %>
    <%= select_tag 'invited_user_id', options_for_select(User.all.collect{ |u| [u.name, u.id] }) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,value:"提交问题" %>
  </div>
<% end %>
