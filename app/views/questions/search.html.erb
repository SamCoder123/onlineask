<div class="col-md-8 col-lg-offset-2">
  <%= render "questions/search_bar" %>

  <br>

   <div class="item_div">

     <%= render :partial => "questions/users_item", :collection => @users, :as => :user %>

     <div class="text-center">
      <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
     </div>
   </div>

   <div class="item_div">
     <table class="table table-borderd">
       <%= render :partial => "questions/item", :collection => @questions, :as => :question %>
     </table>

     <div class="text-center">
      <%= will_paginate @questions, renderer: BootstrapPagination::Rails %>
     </div>
   </div>

</div>
