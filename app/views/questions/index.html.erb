<div class="col-md-12">

<!-- <p id="notice"><%= notice %></p> -->

<h4>公共问题</h4>

<table class="table">
  <thead>
    <tr>
      <th>主题</th>
      <th>描述</th>
      <th>标签</th>
      <th>悬赏金额</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td>
          <div class="trix">
            <%= truncate(sanitize(question.description), limit:10) %>
          </div>

        </td>
        <td><%= render question.tags %></td>
        <td>¥<%= question.downpayment %></td>
        <td colspan="3">
            <%= link_to '详情', question %> ｜
            <%= link_to '我要回答', new_question_answer_path(question) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <div class="total clearfix">
    <%= link_to '我要提问', new_account_question_path %>
  </div>


</div>
