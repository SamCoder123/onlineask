<div class="col-md-12">
  <div class="panel panel-default ">
    <div class="panel-heading">
      <h3 class="panel-title">主题：<%= @question.title %>
        <span class="pull-right">
          提问人：<%= @question.user.email %>
        </span>
      </h3>
    </div>

    <div class="panel-body">
      <p>描述：<%= @question.description %></p>
      <br>
      <div class="pull-left">
        标签：<%= render @question.tags %>
      </div>

      <div class="total clearfix">
        <span class="pull-right">
          <%= link_to '详情', @question %> |
          <%= link_to '返回', questions_path %>
        </span>
      </div>
   </div>




    </div>

    <div class="panel panel-default ">
      <div class="panel-heading">
        <h3 class="panel-title">回答者列表</h3>
      </div>

      <div class="panel-body">
        <% @question.answers.each do |answer| %>
          <%= image_tag(answer.user.image.thumb, class: "thumbnail") %>
          <%= link_to(answer.user.name, exhibition_profile_account_user_path(id: answer.user.id)) %>
          <%= answer.updated_at %>
          <hr>
        <% end %>
      </div>


  </div>
</div>
