<section>
 <!-- 问题标题 -->
  <div class="question-list">
    <div class="row">
      <div class="col-md-2 col-md-offset-3">
          <div style="padding-top:60px;">
            <div class="pull-left">
                <img src="/index/leafing-left.png"/>
            </div>
          </div>
      </div>

      <div class="col-md-2">
          <div style="padding-top:60px;">
            <div class="pull-left">
                <strong><span style="font-size:18px">最热悬赏问题</span></strong>
            </div>
          </div>
      </div>


      <div class="col-md-2">
          <div style="padding-top:60px;">
            <div class="pull-left">
                <img src="/index/leafing-right.png"/>
            </div>
          </div>
      </div>
    </div>


<!-- 问题具体内容 -->
  <div style="margin:50px">
    <table class="table">
      <thead>
        <tr>
          <th>主题</th>
          <th>描述</th>
          <th>悬赏金额</th>
          <!-- <th>Vote</th>
          <th>Is hidden</th>
          <th>User</th> -->
          <th colspan="3">操作</th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.title %></td>
            <td><%= question.description %></td>
            <td>¥<%= question.downpayment %></td>
            <!-- <td><%= question.vote %></td> -->
            <!-- <td><%= question.is_hidden %></td> -->
            <!-- <td><%= question.user_id %></td> -->
            <td colspan="3">
                <%= link_to '详情', question %> ｜
                <%= link_to '我要回答', new_question_answer_path(question) %>

                <!-- <%= link_to '编辑', edit_question_path(question) %>
                <%= link_to '删除', question, method: :delete, data: { confirm: 'Are you sure?' } %> -->
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <hr/>

      <div class="total clearfix">
        <%= link_to '我要提问', new_question_path %>
        <!-- <span class="pull-right">
        </span> -->
      </div>
  </div>



  </div>
</section>
