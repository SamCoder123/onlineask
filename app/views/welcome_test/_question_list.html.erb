<section>
 <!-- 问题标题 -->
  <div class="question-list">
    <div class="row">
      <div class="col-md-2 col-md-offset-3">
          <div style="padding-top:60px;">
            <div class="pull-left">
                <img src="/index/leafing-left.png"/>
            </div>
          </div>
      </div>

      <div class="col-md-2">
          <div style="padding-top:60px;">
            <div class="pull-left">
                <strong><span style="font-size:18px">最热悬赏问题</span></strong>
            </div>
          </div>
      </div>


      <div class="col-md-2">
          <div style="padding-top:60px;">
            <div class="pull-left">
                <img src="/index/leafing-right.png"/>
            </div>
          </div>
      </div>
    </div>


<!-- 问题具体内容 -->
  <div style="margin:50px">
    <table class="table">
      <thead>
        <tr>
          <th>用户</th>
          <th>主题</th>
          <th>描述</th>
          <th>悬赏金额</th>
          <th colspan="3">操作</th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td>
              <%= gravatar_tag question.user.email, :size => 30, :default => "https://en.gravatar.com/userimage/108935282/73e80187e488d35c459472b0fbd720f4.png" %>
              <%= question.user.name %>
            </td>
            <td><%= question.title %></td>
            <td><%= question.description %></td>
            <td>¥<%= question.downpayment %></td>
            <td colspan="3">
                <%= link_to '详情', question %> ｜
                <%= link_to '我要回答', new_question_answer_path(question)%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <hr/>

      <div class="total clearfix">
        <%= link_to '我要提问', new_question_path,class:"btn btn-danger" %>
        <!-- <span class="pull-right">
        </span> -->
      </div>
  </div>



  </div>
</section>
