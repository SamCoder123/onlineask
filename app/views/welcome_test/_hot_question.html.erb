<div class="container">
  <div class="row">
    <% @questions.each do |question| %>
      <div class="col-sm-6 col-sx-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title" style="display : inline"><%= question.title %></h3>
            <%= link_to(question_like_up_question_path(question), method: :post) do %>
              <button type="button" class="btn btn-default" aria-label="Left Align">
                <span><%= question.question_likes.count %> </span>
                <span class="fa fa-thumbs-o-up" aria-hidden="true"></span>
              </button>
            <% end %>
          </div>
          <div class="panel-body">
            <p><%= sanitize(question.description).truncate(30) %></p>
            <div class="pull-right">
            <%= gravatar_tag question.user.email, :size => 40, :default => avatar_url %>
            </div>
            <br>
            <p>回答人数：<%= question.answers.count %></p>
            <hr>
            <div>
              <div class="pull-left">

                <span class="glyphicon glyphicon-tags" aria-hidden="true"> <%= render question.tags %></span>

              </div>
              <div class="pull-right">
                悬赏金额: <%= question.downpayment %>
                <%= link_to '问题详情', question, class: "btn btn-default" %>
                <%= link_to '我要回答', new_question_answer_path(question), class: "btn btn-danger" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
