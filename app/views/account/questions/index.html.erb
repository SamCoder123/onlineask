<h4>我问过的问题</h4>

<table class="table">
  <thead>
    <tr>
      <th>主题</th>
      <th>描述</th>
      <th>悬赏金额</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.description %></td>
        <td>¥<%= question.downpayment %></td>
        <td colspan="3">
            <!-- <!%= link_to '我要回答', new_account_question_answer_path(question) %> -->
            <%= link_to '详情', account_question_path(question) %> |
            <%= link_to '编辑', edit_account_question_path(question) %> |
            <%= link_to '删除', account_question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

