<div class="col-md-12">
  <div class="total clearfix">
    <span class="pull-right">
      <%= link_to '返回', account_questions_path %>
    </span>
  </div>
  <% @invitated_questions.each do |question| %>
  <div class="panel panel-default ">

    <div class="panel-heading">
      <h3 class="panel-title">问题主题：<%= question.title %> 提问人：<%= question.user.name %></h3>
    </div>

    <div class="panel-body">
      <p>问题描述：<%= sanitize(question.description) %></p>
    </div>
    <div class="total clearfix">
      <span class="pull-right">
        <%= link_to '回答' ,new_question_answer_path(question) %>
      </span>
    </div>
  </div>
  <% end %>
</div>
