<div class="col-md-12">
  <div class="total clearfix btn-right-bottom">
      <span class="pull-right">
        <%= link_to '返回', account_answers_path, class: "btn btn-primary btn-xs"%>
      </span>
  </div>
  <div class="panel panel-default ">
    <div class="panel-heading">
      <h3 class="panel-title">问题详情</h3>
    </div>
    <div class="panel-body">
      <p>
        <%= @answer.question.title %>
      </p>
      <div class="panel-body">
        问题补充：
        <p>
          <%= @answer.question.description %>
        </p>
      </div>
    </div>
  </div>

  <div class="panel panel-default ">
    <div class="panel-heading">
      <h3 class="panel-title">我的回答</h3>
    </div>

    <div class="panel-body">
      <p>
        回答内容：<%= @answer.content %>
      </p>

    </div>

    <div class="total clearfix btn-right-bottom">
        <span class="pull-right">
          <%= link_to '编辑', edit_account_answer_path(@answer), class: "btn btn-primary btn-xs" %>
        </span>
    </div>
  </div>
</div>
