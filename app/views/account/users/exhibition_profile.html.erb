<h3>Ta的热门回答</h3>
<% @answers.each do |answer| %>
<div class="panel panel-default ">
  <div class="panel-heading">
    <h3 class="panel-title">问题主题：<%= answer.question.title %>
      <% if current_user.subscribed_answer?(answer) %>
        <i class="fa fa-eye pull-right" aria-hidden="true"><small>已偷听</small></i>
      <% end %>
      <% if answer.answer_status == "best_answer" %>
        <i class="fa fa-star pull-right" aria-hidden="true"><small>荣获「最佳答案」</small></i>
      <% end %>
    </h3>
  </div>
  <div class="panel-body">
    <p>问题描述：<%= answer.question.description %></p>
    <%= link_to("偷听", subscribe_answers_account_answer_path(answer), method: :post, class:"btn btn-danger pull-right") %>
  </div>
</div>
<% end %>

<div class="text-center">
 <%= will_paginate @answers, renderer: BootstrapPagination::Rails %>
</div>
