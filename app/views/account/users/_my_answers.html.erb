
  <ul class="list-group">
      <% @answers.each do |answer| %>
        <li class="list-group-item" style="padding:1em">
          <% if answer.answer_subscriptions.count > 0 %>
            <%= link_to("#{answer.answer_subscriptions.count}人回答过",account_answer_path(answer),class:"btn btn-primary btn-sm") %>
          <% else %>
            <span class="label label-default" style="padding:1em;margin-right:16px"><%= answer.answer_subscriptions.count %>人偷听过</span>
          <% end %>
          <%= link_to truncate(answer.content, :limit => 10 ),account_answer_path(answer) %>

          <div class="pull-right">
            <%#= link_to '详情', account_answer_path(answer), class: "btn btn-primary btn-xs" %>
            <%= link_to '编辑', edit_account_answer_path(answer), class: "btn btn-primary btn-xs" %>
            <%= link_to '删除', publish_hidden_account_answer_path(answer),method: :post, class: "btn btn-primary btn-xs" %>
            <%#= link_to(publish_hidden_account_answer_path(answer), method: :post, data: { confirm: 'Are you sure?' } ) do%>
                  <!-- <i class="fa fa-trash fa-lg" aria-hidden="true"></i> -->
            <%# end %>
          </div>
        </li>
      <% end %>
    </ul>
    <div class="text-center">
     <%= will_paginate @questions, renderer: BootstrapPagination::Rails %>
    </div>
