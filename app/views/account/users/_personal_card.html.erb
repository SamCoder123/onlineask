<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="card hovercard">
  <div class="cardheader"></div>
  <div class="avatar">
    <%= link_to(exhibition_profile_account_user_path(current_user)) do %>
      <%= render_head_image_100(current_user) %>
    <% end %>
  </div>
  <div class="info">
    <div class="col-md-3 col-xs-3 col-sm-3 desc desc-normal">
      <p><%= current_user.questions.size %></p>
      <p>问题</p>
    </div>
    <div class="col-md-3 col-xs-3 col-sm-3 desc desc-normal">
      <p><%= current_user.answers.size %></p>
      <p>回答</p>
    </div>
    <div class="col-md-3 col-xs-3 col-sm-3 desc desc-normal">
      <p><%= current_user.followees.size %></p>
      <p>关注</p>
    </div>
    <div class="col-md-3 col-xs-3 col-sm-3 desc desc-last">
      <p><%= render_count_user_fans(current_user) %></p>
      <p>粉丝</p>
    </div>
  </div>
</div>
