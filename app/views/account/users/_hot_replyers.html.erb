<div class="hot-bg">
    <div class="hot-title-font">
        <strong><span>热门学霸</span></strong>
        <div class="pull-right">
          <%= link_to("更多学霸>>",replyers_account_users_path)  %>
        </div>
    </div>

    <table class="table table-filter">
      <% hot_replyers.each do |replyer| %>
      <tr>
        <td style="width:20px">
          <%= gravatar_tag replyer.email, :size => 30, :default => avatar_url %>
        </td>
        <td>
          <div class="hot-list-font">
            <%= link_to(exhibition_profile_account_user_path(replyer)) do %>
              <span><%= replyer.name %></span><br />
              <span class="pull-left"><%= replyer.school %></span>
              <span class="pull-right media-meta"><%= FollowRelationship.where(follower_id: replyer).count %></span>
            <% end %>
          </div>
        </td>
      </tr>
      <% end %>
    </table>
</div>
