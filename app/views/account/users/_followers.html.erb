<div class="row" style="padding-left:14px">
    <% @followers.each do |follower| %>

      <div class="col-md-3 col-sm-3 col-xs-2 replyer">
          <%= link_to(exhibition_profile_account_user_path(follower.user_id)) do%>
          <div class="replyer-image-bg">
              <%= render_head_image_130(follower.user) %>
          </div>

          <div class="replyer-text">
            <p>
              <strong><%= follower.user.name %></strong> <br />
              <span><%= follower.user.country %></span>
              <span style="padding:0 10px">|</span>
              <span><%= follower.user.school %></span> <br />
              <span>粉丝：<%= follower.user.fans_num %></span>
              <span style="padding:0 10px">|</span>
              <span>问题：<%= follower.user.questions.count %></span>
            </p>
            <% end %>
            <p>
              <span><%= link_to("向Ta提问", new_account_question_path, class:"btn btn-success btn-xs") %></span>
              <% if current_user.already_follower?(follower.user) %>
                <span class="label label-primary" style="padding:5px ">已关注</span>
              <% else %>
                <span><%= link_to("关注", like_account_follow_path(follower.user_id),method: :post, class:"btn btn-default btn-xs") %></span>
              <% end %>
            </p>
          </div>

      </div>
    <% end %>
</div>

<div class="text-center">
  <%= will_paginate @followers, renderer: BootstrapPagination::Rails %>
</div>
