
<div class="" style="margin:30px">
  <table class="table">
    <tr>
      <td>
          Email
      </td>
      <td>
          <%= @user.email %>
      </td>
    </tr>
    <tr>
      <td>
        余额
      </td>
      <td>
          <%= @user.balance %>
      </td>
    </tr>
    <%= form_for [:account, @user], url: deposit_change_account_user_path, method: :post do |f| %>
    <tr>
      <td>
        充值金额
      </td>
      <td>
        <%= f.text_field :balance %>
      </td>
    </tr>
    <tr>
      <td>
        手机号码（如果想得到通知短信）
      </td>
      <td>
        <%= f.text_field :phone_number, label: "手机号码" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.submit "马上充值", disable_with: "充值中...", class: "btn btn-primary"%>
      </td>
      <td>

      </td>
    </tr>
    <% end %>
  </table>
</div>
