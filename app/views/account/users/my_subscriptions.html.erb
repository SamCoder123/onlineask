
    <h2>我偷听的答案</h2>

    <li class="list-group-item">
      <% @answer_subscriptions.each do |answer| %>
        <div class="media">
          <div class="pull-left">
            <%= render_head_image_30(answer.user) %>
          </div>
            <div class="media-body">
              <span class="media-meta pull-right">偷听数：<%= answer.counter_cache %></span>
              <p><%= answer.user.name %></p>
              <p><%= link_to(answer.question.title, account_question_path(answer.question))  %></p>
              <p>
                <%= sanitize(answer.question.description) %>
              </p>

              <p class="summary">
                <span class="media-meta pull-left" style="padding-right:20px">回答人数：<%= answer.question.answers.count %></span>
                <%= render_question_closed?(answer.question) %>
                <span class="media-meta pull-left" style="padding-right:20px">标签：
                  <%= render :partial => "/account/tags/tag_list", :collection => answer.question.tags, :as => :tag %>
                </span>
                <span class="media-meta pull-left"><%= answer.question.created_on %></span>
                <span class="pull-right"><%= link_to("回 答",new_question_answer_path(answer.question),class:"btn btn-primary btn-xs") %></span>
                <span class="pull-right"><%= link_to("偷 听",answer.question,class:"btn btn-default btn-xs") %></span>
              </p>
            </div>
          </div>
        <% end %>
    </li>


    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <% collapse_num = 0 %>
      <% @answer_subscriptions.each do |answer| %>
        <% collapse_num += 1 %>
        <% collapse_num_to_id = collapse_num.to_words.split.map(&:capitalize).join() %>
        <div class="panel panel-default">
          <div class="panel-heading" role="tab" id="heading<%= collapse_num_to_id %>">
            <h4 class="panel-title">
              <% if collapse_num == 1 %>
                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= collapse_num_to_id %>" aria-expanded="true" aria-controls="collapse<%= collapse_num_to_id %>">
              <% else %>
                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= collapse_num_to_id %>" aria-expanded="false" aria-controls="collapse<%= collapse_num_to_id %>">
              <% end %>
                <%= answer.question.title %><b class="caret"></b>
                </a>
                <span class="pull-right">
                  提问人：<%= render_head_image_30(answer.question.user) %>
                  <%= link_to answer.question.user.name, exhibition_profile_account_user_path(answer.question.user) %>
                </span>
                <% if collapse_num == 1 %>
                  <small class="small-tips"><span class="glyphicon glyphicon-time" aria-hidden="true"></span>最近偷听</small>
                <% end %>

            </h4>
          </div>
          <div id="collapse<%= collapse_num_to_id %>" class="panel-collapse collapse <%= "in" if collapse_num == 1 %>" role="tabpanel" aria-labelledby="heading<%= collapse_num_to_id %>">
            <div class="panel-body">
              <%= answer.content %>
              <br>

              <span class="answer-like-stats pull-right">
                <%= render partial: "judge_subscription", locals: {answer: answer} %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="text-center">
     <%= will_paginate @answer_subscriptions, class:"paginate"%>
    </div>
