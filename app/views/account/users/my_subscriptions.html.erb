<div class="row">
  <div class="col-md-10 col-sm-10 col-xs-8">
    <h2>我偷听的答案</h2>
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <% collapse_num = 0 %>
      <% @answers.each do |answer| %>
        <% collapse_num += 1 %>
        <% collapse_num_to_id = collapse_num.to_words.split.map(&:capitalize).join() %>
        <div class="panel panel-default">
          <div class="panel-heading" role="tab" id="heading<%= collapse_num_to_id %>">
            <h4 class="panel-title">
              <% if collapse_num == 1 %>
                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= collapse_num_to_id %>" aria-expanded="true" aria-controls="collapse<%= collapse_num_to_id %>">
              <% else %>
                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= collapse_num_to_id %>" aria-expanded="false" aria-controls="collapse<%= collapse_num_to_id %>">
              <% end %>
                <%= answer.question.title %><b class="caret"></b>
              </a>
            </h4>
          </div>
          <div id="collapse<%= collapse_num_to_id %>" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading<%= collapse_num_to_id %>">
            <div class="panel-body">
              <%= answer.content %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center">
     <%= will_paginate @answers %>
    </div>
  </div>
</div>
