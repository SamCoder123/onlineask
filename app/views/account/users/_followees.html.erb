<div class="row" style="padding-left:14px">
    <% @followees.each do |followee| %>
      <% f = User.find(followee.follower_id) %>
      <div class="col-md-3 col-sm-3 col-xs-2 replyer">
          <%= link_to(exhibition_profile_account_user_path(f)) do%>
          <div class="replyer-image-bg">
              <%= render_head_image_130(f) %>
          </div>
          <div class="replyer-text">
            <p>
              <strong><%= f.name %></strong> <br />
              <span><%= f.country %></span>
              <span style="padding:0 10px">|</span>
              <span><%= f.school %></span> <br />
              <span>粉丝：<%= f.fans_num %></span>
              <span style="padding:0 10px">|</span>
              <span>回答：<%= f.answers.count %></span>
            </p>
          <% end %>
            <p>
              <span><%= link_to("向Ta提问", new_account_question_path, class:"btn btn-success btn-xs") %></span>
              <span><%= link_to("取消关注", like_account_follow_path(f),method: :post, class:"btn btn-default btn-xs") %></span>
            </p>
          </div>
      </div>
    <% end %>

</div>
  <div class="text-center">
    <%= will_paginate @followees, renderer: BootstrapPagination::Rails %>
  </div>
