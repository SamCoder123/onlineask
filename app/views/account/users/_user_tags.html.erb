<div class="" style="margin-bottom:25px;">
  <% current_user.tags.each do |tag| %>
      <% path = filter_by_tag_account_questions_path(tag_name: tag.name) %>
      我的标签:
      <label class="label label-success" style="margin-right:15px" id="myTags" onclick="getList('<%=path%>')"><%= tag.name %></label>
      <%#= link_to(tag.name,reply_account_user_path(current_user,tag_name: tag.name),class: "btn btn-default btn-sm") %>
  <% end %>
</div>


<script type="text/javascript">
  function getList(path){
    $.ajax({
      url: path,
      method: "get",
      dataType: "json",
      success: function(data){
        if (data.length>0) {
          showTabContent(data);
        }
      }
    });
  }

  function showTabContent(data){
    // 这里我想套用 app/views/account/questions/_each_question.html.erb 这个partial中的html代码
    // 应该怎样引用这个partial
    var content = "";
    $(".index-ul").html();
    content = "<table class='table table-stripe'> <thead><th>#</th><th>问题主题</th><th>问题描述</th></thead><tbody>"
    $.each(data, function(index, item) {
      content += "<tr>" +
        "<td>" + (index + 1) + "</td>" +
        "<td>"  + item.title +  "</td>" +
        "<td>" + item.discription + "</td>"
      "</tr>";
    });
    content += "</tbody></table>"

    $(".index-ul").html(content);
  }
</script>
