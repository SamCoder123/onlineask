<div class="col-md-10">
  <div class="panel panel-default">
    <div class="">
      <span>我的动态</span>
      <span><%= link_to("新建动态", new_account_blog_path, class:"btn btn-default btn-sm") %></span>
    </div>
    <hr />

    <% @blogs.each do |blog| %>
      <div class="panel-heading">
        <h3 class="panel-title"><%= blog.title %>
          <span class="pull-right">
            <%= blog.created_at %>
          </span>
        </h3>
      </div>

      <div class="panel-body">
        <p><%= blog.description %></p>
        <div class="total clearfix">
          <span class="pull-right">
            <%= link_to '编辑', "#",class: "btn btn-sm btn-primary" %>
            <%= link_to '删除', "#",class: "btn btn-sm btn-primary" %>
          </span>
        </div>
     </div>
    <% end %>
  </div>
</div>
