<div class="row">
  <div class="col-md-12">
    <div class="btn-group pull-right">
      <button type="button" class="btn btn-danger">排序方式</button>
      <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to("全部交易", bill_admin_admins_path) %></li>
        <li><%= link_to("流入", bill_admin_admins_path(order_method: 'flow_in')) %></li>
        <li><%= link_to("流出", bill_admin_admins_path(order_method: 'flow_out')) %></li>
        <li><%= link_to("提问押金", bill_admin_admins_path(order_method: 'question_deposit')) %></li>
      </ul>
    </div>
    <table class="table table-bordered">
      <thead>
        <th>
          #
        </th>
        <th>
          项目
        </th>
        <th>
          金额
        </th>
        <th>
          流向
        </th>
      </thead>
      <tbody>
        <% @bills.each do |bill| %>
          <tr>
            <td>
              <%= bill.id %>
            </td>
            <td>
              <%= bill.detail %>
            </td>
            <td>
              <%= bill.amount %>
            </td>
            <td>
              <%= bill.flow %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
