<div class="row">
  <div class="col-md-12">
    <h2>问题列表（管理员版）</h2>
    <%= link_to("查看回答列表", admin_answers_path, class:"btn btn-primary pull-right") %>
    <table class="table table-stripped">
      <thead>
        <th>
          标题
        </th>
        <th>
          描述
        </th>
        <th>
          点赞数
        </th>
        <th>
          状态
        </th>
        <th>
          处理方法
        </th>
      </thead>
      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td>
              <%= link_to(question.title, admin_question_path(question)) %>
            </td>
            <td>
              <%= question.description %>
            </td>
            <td>
              <%= question.vote %>
            </td>
            <td>
              <% if question.is_hidden %>
                <p>
                  管理员删除
                </p>
              <% else %>
                <p>
                  正在发表
                </p>
              <% end %>
            </td>
            <td>
              <% if question.is_hidden %>
                <%= link_to("公开", publish_admin_question_path(question), method: :post,class: "btn btn-primary btn-sm") %>
              <% else %>
                <%= link_to("隐藏", hide_admin_question_path(question), method: :post,class: "btn btn-danger btn-sm") %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
