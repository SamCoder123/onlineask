<!DOCTYPE html>
<html>
  <head>
    <%= render_page_title_tag %>
    <%= render_page_description_meta_tag %>
    <%= render_page_keywords_meta_tag %>
    <link rel="shortcut icon" href="/default_image.png">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'simplemde.min' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid" id="wrap">
      <div class="row">
        <%= render "common/navbar" %>
        <%= render "common/flashes" %>
        <%= render_breadcrumb %>
        <%= yield %>
        <div class="push"></div>
      </div>
    </div>
    <div class="footer">
      <%= render "common/footer" %>
    </div>
    <%= javascript_include_tag 'search', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'simplemde.min' %>
    <%= yield :handwrite_javascript %>
  </body>
</html>
